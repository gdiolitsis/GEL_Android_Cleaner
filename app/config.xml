<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gel.cleaner" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GEL Android Cleaner</name>
    <description>Cleaner App powered by GDiolitsis Engine Lab (GEL)</description>
    <author email="support@gdiolitsis.dev" href="https://github.com/gdiolitsis">GDiolitsis Engine Lab (GEL)</author>

    <content src="index.html" />
    <access origin="*" />
    <preference name="android-minSdkVersion" value="24" />
    <preference name="android-targetSdkVersion" value="33" />

    <!-- Εδώ ενεργοποιούμε το plugin -->
    <plugin name="cordova-plugin-gelcleaner" spec="./cordova-plugin-gelcleaner" />

</widget>

    <!-- ========================= -->
    <!-- ✅ GEL-PERM-START -->
    <platform name="android">
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/uses-permission">
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />
            <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
            <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
            <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
        </edit-config>
    </platform>
    <!-- ✅ GEL-PERM-END -->
    <!-- ========================= -->

