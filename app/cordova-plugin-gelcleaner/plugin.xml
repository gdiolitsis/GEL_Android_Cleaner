<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-gelcleaner" version="1.0.0"
  xmlns="http://apache.org/cordova/ns/plugins/1.0"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <name>GEL Cleaner</name>
  <description>Aggressive cleaner: cache/temp wipe + bg kill</description>
  <license>Apache-2.0</license>

  <!-- JS bridge (kept minimal; your app already loads app/www/gelcleaner.js) -->
  <js-module name="gelcleaner" src="www/gelcleaner.js">
    <clobbers target="gelcleaner" />
  </js-module>

  <platform name="android">
    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="GELCleaner">
        <param name="android-package" value="com.gel.cleaner.GELCleaner" />
      </feature>
    </config-file>

    <source-file src="src/android/com/gel/cleaner/GELCleaner.java" target-dir="src/com/gel/cleaner" />
  </platform>
</plugin>
