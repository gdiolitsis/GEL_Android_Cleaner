<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-gelcleaner"
        version="1.0.0"
        xmlns="http://apache.org/cordova/ns/plugins"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <name>GELCleaner</name>

    <!-- ✅ JS MODULE -->
    <js-module src="www/gelcleaner.js" name="GELCleaner">
        <clobbers target="GELCleaner"/>
    </js-module>

    <platform name="android">

        <!-- ✅ CORE JAVA -->
        <source-file
            src="src/android/com/gel/cleaner/GELCleaner.java"
            target-dir="app/src/main/java/com/gel/cleaner"/>

        <!-- ✅ ACCESSIBILITY JAVA -->
        <source-file
            src="src/android/com/gel/cleaner/GELAccessibilityService.java"
            target-dir="app/src/main/java/com/gel/cleaner"/>

        <!-- ✅ REGISTER FEATURE -->
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="GELCleaner">
                <param name="android-package" value="com.gel.cleaner.GELCleaner"/>
            </feature>
        </config-file>

        <!-- ✅ PERMISSIONS -->
        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.CLEAR_APP_CACHE" />
            <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />
            <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />
            <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
        </config-file>

        <!-- ✅ ACCESSIBILITY SERVICE REGISTRATION -->
        <config-file target="AndroidManifest.xml" parent="application">
            <service
                android:name="com.gel.cleaner.GELAccessibilityService"
                android:enabled="true"
                android:exported="false"
                android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">

                <intent-filter>
                    <action android:name="android.accessibilityservice.AccessibilityService" />
                </intent-filter>

                <meta-data
                    android:name="android.accessibilityservice"
                    android:resource="@xml/gel_accessibility_service" />
            </service>
        </config-file>

    </platform>

</plugin>
