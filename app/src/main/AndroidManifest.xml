<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gel.cleaner">

    <!-- === Core Permissions === -->

    <!-- List installed apps (Cleaner baseline) -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />

    <!-- Storage access -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" />

    <!-- File management post-Android 11 -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <!-- Cache cleaning (usage stats + package ops) -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" />
    <uses-permission android:name="android.permission.DELETE_PACKAGES" tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />

    <!-- Internet (analytics / API / remote cfg) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Improve compatibility -->
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES" />


    <!-- Minimum / Target -->
    <uses-sdk android:minSdkVersion="23" android:targetSdkVersion="34" />

    <!-- =========================== -->
    <!-- == Application Section ==== -->
    <!-- =========================== -->

    <application
        android:allowBackup="false"
        android:debuggable="false"
        android:supportsRtl="true"
        android:extractNativeLibs="true"
        android:usesCleartextTraffic="false"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:theme="@style/Theme.App">

        <!-- === Main UI Entry === -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- App List -->
        <activity
            android:name=".AppListActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Cleaner Actions -->
        <activity
            android:name=".CleanerActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Storage Permission Activity -->
        <activity
            android:name=".PermissionsActivity"
            android:exported="false" />

    </application>

</manifest>
