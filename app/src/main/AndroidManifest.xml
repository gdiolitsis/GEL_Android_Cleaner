<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ============================================================
         STORAGE / FILE SYSTEM
         ============================================================ -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"/>
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!-- ============================================================
         USAGE ACCESS (needed for installed apps footprint)
         ============================================================ -->
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions"/>

    <!-- ============================================================
         SYSTEM / TASKS
         ============================================================ -->
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>

    <!-- ============================================================
         NETWORK ACCESS
         ============================================================ -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- ============================================================
         SIM & MOBILE NETWORK STATE (LAB 12)
         ============================================================ -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE"
        tools:ignore="ProtectedPermissions" />

    <!-- ============================================================
         WIFI DIAGNOSTICS (LAB 11)
         ============================================================ -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <!-- Android 13+ WiFi Scanning -->
    <uses-permission
        android:name="android.permission.NEARBY_WIFI_DEVICES"
        android:usesPermissionFlags="neverForLocation" />

    <!-- Required for SSID access on Android 10+ -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- ============================================================
         BLUETOOTH (read-only status)
         ============================================================ -->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <!-- ============================================================
         CAMERA (needed for QR scan in LAB 11)
         ============================================================ -->
    <uses-permission android:name="android.permission.CAMERA"/>

    <!-- ============================================================
         VIBRATION
         ============================================================ -->
    <uses-permission android:name="android.permission.VIBRATE"/>

    <!-- ============================================================
         APPLICATION
         ============================================================ -->
    <application
        android:allowBackup="false"
        android:supportsRtl="true"
        android:usesCleartextTraffic="false"
        android:requestLegacyExternalStorage="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:theme="@style/Theme.GEL.DarkGold">

        <!-- MAIN -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".AppListActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <activity android:name=".CleanerActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <activity android:name=".PermissionsActivity"
            android:exported="false"/>

        <activity android:name=".DeviceInfoInternalActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name=".DeviceInfoPeripheralsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name=".CpuRamLiveActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ============================================================
             ðŸ”¥ Core Monitor (FIX â€” crash Î»ÏÎ¸Î·ÎºÎµ)
             ============================================================ -->
        <activity
            android:name=".CoreMonitorActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- SERVICE MENU -->
        <activity android:name=".DiagnosisMenuActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- MANUAL LABS -->
        <activity android:name=".ManualTestsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name=".PerformanceDiagnosticsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name=".ServiceReportActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- AUTO DIAG -->
        <activity android:name=".AutoDiagnosisActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ACCESSIBILITY -->
        <service
            android:name=".GELAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="true">

            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService"/>
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/gel_accessibility_service"/>
        </service>

    </application>

</manifest>
