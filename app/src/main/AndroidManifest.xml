<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- STORAGE -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"/>
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!-- USAGE -->
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions"/>

    <!-- TASKS -->
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>

    <!-- NETWORK -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- FULL DIAGNOSTIC PACK â€” WiFi + Bluetooth + Location -->
    <!-- WiFi State + Scans -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <!-- Android 13+ WiFi scanning (NEARBY_DEVICES group) -->
    <uses-permission
        android:name="android.permission.NEARBY_WIFI_DEVICES"
        android:usesPermissionFlags="neverForLocation" />

    <!-- Location needed for RSSI / BSSID / WiFi scan results (Android requirement) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Bluetooth (read-only status only â€” no CONNECT) -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <!-- VIBRATION -->
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="false"
        android:supportsRtl="true"
        android:usesCleartextTraffic="false"
        android:requestLegacyExternalStorage="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:theme="@style/Theme.GEL.DarkGold">

        <!-- MAIN -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".AppListActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <activity android:name=".CleanerActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <activity android:name=".PermissionsActivity"
            android:exported="false"/>

        <activity android:name=".DeviceInfoInternalActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name=".DeviceInfoPeripheralsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name=".CpuRamLiveActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- SERVICE LAB -->
        <activity android:name=".DiagnosisMenuActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name=".ManualTestsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name=".PerformanceDiagnosticsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name=".ServiceReportActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ðŸ†• NEW AUTO DIAG ROOT-AWARE -->
        <activity android:name=".AutoDiagnosisActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ACCESSIBILITY -->
        <service
            android:name=".GELAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="true">

            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService"/>
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/gel_accessibility_service"/>
        </service>

    </application>

</manifest>
