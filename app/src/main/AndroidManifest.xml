<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- âœ… FULL STORAGE + APPS + PROCESS -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"/>
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>

    <!-- âœ… Legacy storage (â‰¤ Android 10) -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!-- âœ… Usage access -->
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions"/>

    <!-- âœ… Kill background tasks -->
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>

    <!-- âœ… Network -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- âœ… Vibration -->
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="false"
        android:supportsRtl="true"
        android:usesCleartextTraffic="false"
        android:requestLegacyExternalStorage="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:theme="@style/Theme.GEL.DarkGold">

        <!-- MAIN LAUNCHER -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- PER-APP CACHE VIEW -->
        <activity
            android:name=".AppListActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <!-- CLEANER SCREEN -->
        <activity
            android:name=".CleanerActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <!-- PERMISSION HELPER -->
        <activity
            android:name=".PermissionsActivity"
            android:exported="false"/>

        <!-- INTERNAL DEVICE INFO -->
        <activity
            android:name=".DeviceInfoInternalActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- PERIPHERALS DEVICE INFO -->
        <activity
            android:name=".DeviceInfoPeripheralsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- CPU/RAM LIVE ACTIVITY -->
        <activity
            android:name=".CpuRamLiveActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ðŸ†• SERVICE LAB â€” MAIN MENU -->
        <activity
            android:name=".DiagnosisMenuActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ðŸ†• SERVICE LAB â€” MANUAL TESTS -->
        <activity
            android:name=".ManualTestsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ðŸ†• AUTO DIAGNOSIS â€” FULL SERVICE LAB -->
        <activity
            android:name=".PerformanceDiagnosticsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ðŸ†• SERVICE LAB â€” EXPORT REPORT -->
        <activity
            android:name=".ServiceReportActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- ACCESSIBILITY SERVICE -->
        <service
            android:name=".GELAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="true">

            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService"/>
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/gel_accessibility_service"/>
        </service>

    </application>

</manifest>
