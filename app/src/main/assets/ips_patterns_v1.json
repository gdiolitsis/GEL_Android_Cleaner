{
  "version": "1.0",
  "source": "GEL Service Knowledge Base",
  "patterns": [
    {
      "id": "IPS-THERMAL-001",
      "match": ["Missing sensor", "TG0", "TG1"],
      "domain": "Thermal / Sensors",
      "cause": "Thermal sensor not responding (I2C line)",
      "severity": "HIGH",
      "confidence": "HIGH",
      "recommendation": "Logic board inspection or flex replacement"
    },
    {
      "id": "IPS-POWER-002",
      "match": ["PMIC", "powerd", "shutdown cause"],
      "domain": "Power / PMIC",
      "cause": "Power management instability",
      "severity": "HIGH",
      "confidence": "MEDIUM",
      "recommendation": "Battery + PMIC line check"
    },
    {
      "id": "IPS-WATCHDOG-003",
      "match": ["watchdog", "userspace watchdog timeout"],
      "domain": "System / Software",
      "cause": "System freeze or driver deadlock",
      "severity": "MEDIUM",
      "confidence": "MEDIUM",
      "recommendation": "iOS restore or update recommended"
    },
    {
      "id": "IPS-NAND-004",
      "match": ["nand", "I/O error", "filesystem corruption"],
      "domain": "Storage / NAND",
      "cause": "Storage read/write failure",
      "severity": "CRITICAL",
      "confidence": "HIGH",
      "recommendation": "Logic board storage repair required"
    }
  ]
}
