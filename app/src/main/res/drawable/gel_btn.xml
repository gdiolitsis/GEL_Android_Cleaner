<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- PRESSED -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gel_bg_dark"/>
            <stroke android:width="2
                3dp" android:color="@color/gel_gold_dark"/>
            <corners android:radius="10dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <!-- NORMAL -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gel_bg_dark"/>
            <stroke android:width="3dp" android:color="@color/gel_gold"/>
            <corners android:radius="10dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>
