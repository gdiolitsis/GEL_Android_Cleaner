<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#B30000"/>   <!-- pressed -->
            <stroke android:width="2dp" android:color="#FFB13F"/>
            <corners android:radius="14dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CC0000"/>   <!-- normal -->
            <stroke android:width="2dp" android:color="#FFB13F"/>
            <corners android:radius="14dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>

</selector>
