<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- PRESSED -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gel_bg_pressed"/>
            <stroke
                android:width="2dp"
                android:color="@color/gel_gold"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- DEFAULT -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gel_bg"/>
            <stroke
                android:width="2dp"
                android:color="@color/gel_gold"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

</selector>
