<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- PRESSED -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gel_gold_dark"/>
            <stroke
                android:width="2dp"
                android:color="@color/gel_gold"/>
            <corners android:radius="14dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>

    <!-- DEFAULT -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gel_gold"/>
            <stroke
                android:width="2dp"
                android:color="@color/gel_gold_dark"/>
            <corners android:radius="14dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>

</selector>
