<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background -->
    <solid android:color="#000000" />

    <!-- Gold Border -->
    <stroke
        android:width="3dp"
        android:color="#FFD700" />

    <!-- Rounded Corners -->
    <corners android:radius="18dp" />

    <!-- Inner Padding -->
    <padding
        android:left="20dp"
        android:top="20dp"
        android:right="20dp"
        android:bottom="20dp" />

</shape>
