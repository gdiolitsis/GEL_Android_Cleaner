<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background -->
    <solid android:color="#000000" />

    <!-- Gold border -->
    <stroke
        android:width="2dp"
        android:color="#FFD700" />

    <!-- Rounded corners -->
    <corners android:radius="14dp" />

    <!-- Padding -->
    <padding
        android:left="18dp"
        android:top="18dp"
        android:right="18dp"
        android:bottom="18dp" />

</shape>
