    </LinearLayout>

    <!-- ========================================================= -->
    <!--  RIGHT CONTENT AREA (Logs)                                -->
    <!-- ========================================================= -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.68"
        android:padding="@dimen/gel_padding_m">

        <TextView
            android:id="@+id/txtTitleRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Cleaner Log"
            android:textColor="@color/gel_text_primary"
            android:textSize="@dimen/gel_text_large"
            android:textStyle="bold"
            android:paddingBottom="@dimen/gel_padding_s" />

        <ScrollView
            android:id="@+id/scrollCleaner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#151515"
            android:padding="@dimen/gel_padding_s">

            <TextView
                android:id="@+id/txtCleanerLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gel_text_secondary"
                android:textSize="@dimen/gel_text_small"
