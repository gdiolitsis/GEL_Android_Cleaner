        android:layout_weight="0.32"
        android:padding="@dimen/gel_padding_m"
        android:background="@drawable/gel_card_bg"
        android:gravity="top">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ§¹ GEL Cleaner"
            android:textColor="@color/gel_gold"
            android:textSize="@dimen/gel_text_title"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="@dimen/gel_padding_s" />

        <Button
            android:id="@+id/btnCleanRam"
            style="@style/GEL.SideButton"
            android:text="âš¡ Clean RAM"/>

        <Button
            android:id="@+id/btnDeepClean"
            style="@style/GEL.SideButton"
            android:text="ðŸ›  Deep Clean"/>

        <Button
            android:id="@+id/btnTempFiles"
            style="@style/GEL.SideButton"
            android:text="ðŸ”¥ Temp / Junk Files"/>

        <Button
            android:id="@+id/btnBrowserClean"
            style="@style/GEL.SideButton"
            android:text="ðŸŒ Browser Cache"/>

        <Button
            android:id="@+id/btnRunningApps"
