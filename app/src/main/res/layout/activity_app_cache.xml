<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gel_bg"
    android:padding="12dp">

    <!-- ========================================================= -->
    <!-- ðŸ” SEARCH BAR -->
    <!-- ========================================================= -->

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/search_app"
        android:textColor="@color/gel_text_primary"
        android:textColorHint="@color/gel_text_secondary"
        android:background="@drawable/gel_input_bg"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_marginBottom="10dp"/>

    <!-- ========================================================= -->
    <!-- ðŸ“Š TOP CONTROLS -->
    <!-- ========================================================= -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnSelectAll"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:text="@string/select_all"
            android:textAllCaps="false"
            android:backgroundTint="#FFD700"
            android:textColor="@color/gel_text_primary"/>

        <Button
            android:id="@+id/btnSortCache"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:text="@string/largest_cache"
            android:textAllCaps="false"
            android:layout_marginStart="6dp"
            android:backgroundTint="#FFD700"
            android:textColor="@color/gel_text_primary"/>
    </LinearLayout>

    <!-- ========================================================= -->
    <!-- ðŸŽ¯ CATEGORY SELECT -->
    <!-- ========================================================= -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnSelectUsers"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/select_users"
            android:textAllCaps="false"
            android:backgroundTint="#39FF14"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/btnSelectSystem"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/select_system"
            android:textAllCaps="false"
            android:layout_marginStart="6dp"
            android:backgroundTint="#FF9800"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <!-- ========================================================= -->
    <!-- ðŸ“‚ APP LIST -->
    <!-- ========================================================= -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listApps"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"/>

    <!-- ========================================================= -->
    <!-- âš¡ GUIDED MODE -->
    <!-- ========================================================= -->

    <Button
        android:id="@+id/btnGuidedClean"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/start_guided_cleaning"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FFD700"
        android:textColor="@color/gel_text_primary"/>

</LinearLayout>
