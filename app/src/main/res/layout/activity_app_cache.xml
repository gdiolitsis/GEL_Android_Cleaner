<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gel_bg"
    android:padding="12dp">

    <!-- SEARCH BAR -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Search app..."
        android:textColor="@color/gel_text_primary"
        android:textColorHint="@color/gel_text_secondary"
        android:backgroundTint="#FFD700"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginBottom="10dp"/>

    <!-- SORT ROW -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnSortName"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="A-Z"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btnSortCache"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Largest Cache"
            android:textAllCaps="false"
            android:layout_marginStart="6dp"/>
    </LinearLayout>

    <!-- LIST -->
    <ListView
        android:id="@+id/listApps"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#333333"
        android:dividerHeight="1dp"/>

    <!-- GUIDED MODE BUTTON -->
    <Button
        android:id="@+id/btnGuidedClean"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Start Guided Cache Cleaning"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"/>
        
</LinearLayout>
