<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gel_bg"
    android:padding="12dp">

    <!-- ========================================================= -->
    <!-- ðŸ” SEARCH BAR -->
    <!-- ========================================================= -->

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/search_app"
        android:textColor="@color/gel_text_primary"
        android:textColorHint="@color/gel_text_secondary"
        android:background="@drawable/gel_input_bg"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_marginBottom="10dp"/>

    <!-- ========================================================= -->
    <!-- ðŸ“Š GEL STATS PANEL -->
    <!-- ========================================================= -->

    <LinearLayout
        android:id="@+id/layoutStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/gel_stats_bg">

        <TextView
            android:id="@+id/txtStatsTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Apps: 0"
            android:textColor="#FFD700"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtStatsUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Apps: 0"
            android:textColor="#39FF14"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/txtStatsSystem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System Apps: 0"
            android:textColor="#FF9800"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/txtStatsSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected: 0"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- ========================================================= -->
    <!-- ðŸ“Š TOP CONTROLS -->
    <!-- ========================================================= -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
    android:id="@+id/btnSelectAll"
    android:layout_width="0dp"
    android:layout_height="42dp"
    android:layout_weight="1"
    android:text="@string/select_all"
    android:textAllCaps="false"
    android:textColor="#000000"
    android:background="@drawable/gel_btn_blue_gold"/>
        
        <Button
    android:id="@+id/btnSortCache"
    android:layout_width="0dp"
    android:layout_height="42dp"
    android:layout_weight="1"
    android:text="@string/largest_cache"
    android:textAllCaps="false"
    android:layout_marginStart="6dp"
    android:textColor="#FF0000"
    android:background="@drawable/gel_btn_yellow_gold" />
    </LinearLayout>

    <!-- ========================================================= -->
    <!-- ðŸŽ¯ CATEGORY SELECT -->
    <!-- ========================================================= -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <Button
    android:id="@+id/btnSelectUsers"
    android:layout_width="0dp"
    android:layout_height="40dp"
    android:layout_weight="1"
    android:text="@string/select_user_apps"
    android:textAllCaps="false"
    android:textColor="#000000"
    android:background="@drawable/gel_btn_green_gold"/>

        <Button
    android:id="@+id/btnSelectSystem"
    android:layout_width="0dp"
    android:layout_height="40dp"
    android:layout_weight="1"
    android:text="@string/select_system_apps"
    android:textAllCaps="false"
    android:layout_marginStart="6dp"
    android:textColor="#FFFFFF"
    android:background="@drawable/gel_btn_red_gold"/>
    </LinearLayout>

    <!-- ========================================================= -->
    <!-- ðŸ“‚ APP LIST -->
    <!-- ========================================================= -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listApps"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"/>

    <!-- ========================================================= -->
    <!-- âš¡ GUIDED MODE -->
    <!-- ========================================================= -->

    <Button
    android:id="@+id/btnGuidedClean"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:text="@string/start_guided_cleaning"
    android:textAllCaps="false"
    android:layout_marginTop="10dp"
    android:textColor="#000000"
    android:background="@drawable/gel_btn_green_gold"/>

</LinearLayout>
