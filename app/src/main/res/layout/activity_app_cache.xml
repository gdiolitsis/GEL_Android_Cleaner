<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gel_bg"
    android:padding="12dp">

    <!-- ============================================================
         ðŸ” SEARCH BAR
         ============================================================ -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Search app..."
        android:textColor="@color/gel_text_primary"
        android:textColorHint="@color/gel_text_secondary"
        android:background="@drawable/gel_input_bg"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_marginBottom="10dp"/>

    <!-- ============================================================
         ðŸ“Š SORT CONTROLS
         ============================================================ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btnSortName"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:text="Aâ€“Z"
            android:textAllCaps="false"
            android:backgroundTint="#FFD700"
            android:textColor="@color/gel_text_primary"/>

        <Button
            android:id="@+id/btnSortCache"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:text="Largest Cache"
            android:textAllCaps="false"
            android:layout_marginStart="6dp"
            android:backgroundTint="#FFD700"
            android:textColor="@color/gel_text_primary"/>
    </LinearLayout>

    <!-- ============================================================
         ðŸ“‚ APP LIST
         ============================================================ -->
    <ListView
        android:id="@+id/listApps"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#333333"
        android:dividerHeight="1dp"
        android:scrollbars="vertical"/>

    <!-- ============================================================
         âš¡ GUIDED MODE BUTTON
         ============================================================ -->
    <Button
        android:id="@+id/btnGuidedClean"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Start Guided Cache Cleaning"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FFD700"
        android:textColor="@color/gel_text_primary"/>

</LinearLayout>
