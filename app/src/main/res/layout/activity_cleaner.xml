<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gel_bg"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/gel_logo" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cleaning…"
            android:textColor="@color/gel_text_primary"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="⌂"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/gel_gold"/>
    </LinearLayout>


    <!-- PROGRESS BAR -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:progress="10"
        android:max="100"
        android:progressTint="@color/gel_gold"
        android:background="@color/gel_bg_dark"/>


    <!-- PROGRESS LOG -->
    <ScrollView
        android:id="@+id/scrollProgress"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:fillViewport="true">

        <TextView
            android:id="@+id/txtProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gel_text_secondary"
            android:textSize="14sp"/>
    </ScrollView>

</LinearLayout>
