<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@color/gel_bg"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TITLE -->
        <TextView
            android:id="@+id/txtTitleDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_info_internal"
            android:textColor="@color/gel_gold"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- SYSTEM -->
        <LinearLayout
            android:id="@+id/headerSystem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <TextView
                android:id="@+id/iconSystemToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＋"
                android:textColor="@color/gel_gold"
                android:textSize="20sp"
                android:paddingRight="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_system"
                android:textColor="@color/gel_text_primary"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtSystemContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gel_text_primary"
            android:textSize="15sp"
            android:visibility="gone"
            android:padding="6dp" />

        <!-- ANDROID -->
        <LinearLayout
            android:id="@+id/headerAndroid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <TextView
                android:id="@+id/iconAndroidToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＋"
                android:textColor="@color/gel_gold"
                android:textSize="20sp"
                android:paddingRight="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_android"
                android:textColor="@color/gel_text_primary"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtAndroidContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gel_text_primary"
            android:textSize="15sp"
            android:visibility="gone"
            android:padding="6dp" />

        <!-- CPU -->
        <LinearLayout
            android:id="@+id/headerCpu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <TextView
                android:id="@+id/iconCpuToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＋"
                android:textColor="@color/gel_gold"
                android:textSize="20sp"
                android:paddingRight="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_cpu"
                android:textColor="@color/gel_text_primary"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtCpuContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gel_text_primary"
            android:textSize="15sp"
            android:visibility="gone"
            android:padding="6dp" />

        <!-- GPU -->
        <LinearLayout
            android:id="@+id/headerGpu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <TextView
                android:id="@+id/iconGpuToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＋"
                android:textColor="@color/gel_gold"
                android:textSize="20sp"
                android:paddingRight="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_gpu"
                android:textColor="@color/gel_text_primary"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtGpuContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gel_text_primary"
            android:textSize="15sp"
            android:visibility="gone"
            android:padding="6dp" />

        <!-- THERMAL (ΧΩΡΙΣ ΚΑΝΕΝΑ ID CONFLICT) -->
        <LinearLayout
            android:id="@+id/headerThermal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/iconThermalToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＋"
                android:textColor="@color/gel_gold"
                android:textSize="20sp"
                android:paddingRight="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_thermal"
                android:textColor="@color/gel_text_primary"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtThermalContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gel_text_primary"
            android:textSize="15sp"
            android:padding="6dp"
            android:visibility="gone" />


        <!-- THERMAL ZONES -->
        <LinearLayout
            android:id="@+id/headerThermalZones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/iconThermalZonesToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＋"
                android:textColor="@color/gel_gold"
                android:textSize="20sp"
                android:paddingRight="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_thermal_zones"
                android:textColor="@color/gel_text_primary"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtThermalZonesContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gel_text_primary"
            android:textSize="15sp"
            android:padding="6dp"
            android:visibility="gone" />


        <!-- VULKAN / FPS / RAM / STORAGE / SCREEN / CONNECTIVITY / ROOT -->
        <!-- (Όλα ίδια, τίποτα δεν άλλαξα) -->

    </LinearLayout>
</ScrollView>
