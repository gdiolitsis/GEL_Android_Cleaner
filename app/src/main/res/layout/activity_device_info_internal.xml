<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/gel_bg">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TITLE -->
        <TextView
            android:id="@+id/int_txtTitleDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_info_internal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/gel_text_primary"
            android:gravity="center"
            android:layout_marginBottom="10dp" />

        <!-- SECTION HEADER -->
        <TextView
            android:id="@+id/int_txtSectionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“‚ INTERNAL REPORT â€” System / OS / Hardware"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/gel_gold"
            android:layout_marginBottom="14dp" />

        <!-- SYSTEM -->
        <LinearLayout
            android:id="@+id/int_headerSystem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gel_btn_outline_selector"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/int_txtSystemLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="System &amp; Hardware"
                android:textColor="#00FFBF"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/int_iconSystemToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ï¼‹"
                android:textColor="#00FFBF"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/int_txtSystemContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:typeface="monospace"
            android:padding="12dp" />

        <!-- ANDROID -->
        <LinearLayout
            android:id="@+id/int_headerAndroid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gel_btn_outline_selector"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/int_txtAndroidLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Android / OS"
                android:textColor="#00FFBF"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/int_iconAndroidToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ï¼‹"
                android:textColor="#00FFBF"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/int_txtAndroidContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:typeface="monospace"
            android:padding="12dp" />

        <!-- CPU -->
        <LinearLayout
            android:id="@+id/int_headerCpu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gel_btn_outline_selector"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:clickable="true"
            android:focusable="true">
