<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollDeviceInfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/gel_bg">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TITLE -->
        <TextView
            android:id="@+id/txtTitleDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_info_peripherals"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/gel_text_primary"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- SECTION HEADER -->
        <TextView
            android:id="@+id/txtSectionHeaderPeriph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“‚ PERIPHERALS REPORT â€” Camera / Sensors / IO"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/gel_gold"
            android:layout_marginBottom="10dp" />

        <!-- CAMERA -->
        <LinearLayout
            android:id="@+id/boxCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:id="@+id/headerCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gel_btn_outline_selector"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/txtCameraTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Camera"
                    android:textColor="#00FFBF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/iconCameraToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ï¼‹"
                    android:textColor="#00FFBF"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtCameraContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/gel_text_secondary"
                android:textSize="14sp"
                android:typeface="monospace"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />
        </LinearLayout>

        <!-- BIOMETRICS -->
        <LinearLayout
            android:id="@+id/boxBiometrics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:id="@+id/headerBiometrics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gel_btn_outline_selector"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/txtBiometricsTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Biometrics"
                    android:textColor="#00FFBF"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/iconBiometricsToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ï¼‹"
                    android:textColor="#00FFBF"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtBiometricsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/gel_text_secondary"
                android:textSize="14sp"
                android:typeface="monospace"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />
        </LinearLayout>

        <!-- SENSORS -->
        <LinearLayout
            android:id="@+id/boxSensors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:id="@+id/headerSensors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
