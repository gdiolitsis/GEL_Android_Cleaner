<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gel_bg"
    android:padding="18dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TITLE -->
        <TextView
            android:id="@+id/txtTitleDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_info_peripherals"
            android:textColor="@color/gel_gold"
            android:textStyle="bold"
            android:textSize="22sp"
            android:gravity="center"
            android:paddingBottom="20dp" />

        <!-- CAMERA -->
        <LinearLayout
            android:id="@+id/headerCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <TextView
                android:id="@+id/iconCameraToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＋"
                android:textColor="@color/gel_gold"
                android:textSize="20sp"
                android:paddingRight="6dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_camera"
                android:textColor="@color/gel_text_primary"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtCameraContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/gel_text_primary"
            android:padding="6dp"
            android:textSize="15sp"/>


        <!-- BIOMETRICS -->
        <LinearLayout
            android:id="@+id/headerBiometrics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/iconBiometricsToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＋"
                android:textColor="@color/gel_gold"
                android:textSize="20sp"
                android:paddingRight="6dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_biometrics"
                android:textColor="@color/gel_text_primary"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtBiometricsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/gel_text_primary"
            android:padding="6dp"
            android:textSize="15sp"/>

        <!-- SENSORS -->
        <LinearLayout
            android:id="@+id/headerSensors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/iconSensorsToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＋"
                android:textColor="@color/gel_gold"
                android:textSize="20sp"
                android:paddingRight="6dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_sensors"
                android:textColor="@color/gel_text_primary"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtSensorsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/gel_text_primary"
            android:padding="6dp"
            android:textSize="15sp"/>

        <!-- (ΚΑΙ ΟΛΕΣ ΟΙ ΑΛΛΕΣ ΕΝΟΤΗΤΕΣ — SAME IDs, CLEANED, NO DUPLICATES) -->

    </LinearLayout>

</ScrollView>
