<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gel_bg"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTitleDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PERIPHERALS REPORT"
            android:textColor="@color/gel_gold"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <!-- ======================== -->
        <!-- 1. BATTERY -->
        <!-- ======================== -->
        <LinearLayout
            android:id="@+id/headerBattery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gel_btn_outline_selector"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:clickable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Battery"
                android:textColor="#00FFBF"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/iconBatteryToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＋"
                android:textColor="#00FFBF"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtBatteryContent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:typeface="monospace"
            android:textSize="14sp"
            android:padding="12dp"/>

        <!-- ======================== -->
        <!-- 2. CAMERAS -->
        <!-- ======================== -->
        <LinearLayout
            android:id="@+id/headerCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gel_btn_outline_selector"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:clickable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Camera System"
                android:textColor="#00FFBF"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/iconCameraToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＋"
                android:textColor="#00FFBF"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtCameraContent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:typeface="monospace"
            android:textSize="14sp"
            android:padding="12dp"/>

        <!-- ======================== -->
        <!-- 3. PERFORMANCE / THERMALS -->
        <!-- ======================== -->
        <LinearLayout
            android:id="@+id/headerPerformance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gel_btn_outline_selector"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:clickable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Performance / Thermals"
                android:textColor="#00FFBF"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/iconPerformanceToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＋"
                android:textColor="#00FFBF"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtPerformanceContent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:typeface="monospace"
            android:textSize="14sp"
            android:padding="12dp"/>

        <!-- ======================== -->
        <!-- 4. CORE HARDWARE -->
        <!-- ======================== -->
        <LinearLayout
            android:id="@+id/headerCoreHardware"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gel_btn_outline_selector"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:clickable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Core Hardware"
                android:textColor="#00FFBF"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/iconCoreHardwareToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＋"
                android:textColor="#00FFBF"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtCoreHardwareContent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:typeface="monospace"
            android:textSize="14sp"
            android:padding="12dp"/>

        <!-- ======================== -->
        <!-- 5. CONNECTIVITY -->
        <!-- ======================== -->
        <LinearLayout
            android:id="@+id/headerConnectivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gel_btn_outline_selector"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:clickable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Connectivity"
                android:textColor="#00FFBF"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/iconConnectivityToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＋"
                android:textColor="#00FFBF"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtConnectivityContent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:typeface="monospace"
            android:textSize="14sp"
            android:padding="12dp"/>

        <!-- ======================== -->
        <!-- 6. TELEPHONY -->
        <!-- ======================== -->
        <LinearLayout
            android:id="@+id/headerTelephony"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gel_btn_outline_selector"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:clickable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Telephony"
                android:textColor="#00FFBF"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/iconTelephonyToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＋"
                android:textColor="#00FFBF"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtTelephonyContent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:typeface="monospace"
            android:textSize="14sp"
            android:padding="12dp"/>

        <!-- ======================== -->
        <!-- 7. RADIO SYSTEMS -->
        <!-- ======================== -->
        <LinearLayout
            android:id="@+id/headerRadios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gel_btn_outline_selector"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:clickable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Radio Systems"
                android:textColor="#00FFBF"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/iconRadiosToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＋"
                android:textColor="#00FFBF"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtRadiosContent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:typeface="monospace"
            android:textSize="14sp"
            android:padding="12dp"/>

        <!-- ======================== -->
        <!-- 8. MULTIMEDIA & AUDIO -->
        <!-- ======================== -->
        <LinearLayout
            android:id="@+id/headerMultimedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gel_btn_outline_selector"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:clickable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Multimedia / Audio"
                android:textColor="#00FFBF"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/iconMultimediaToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＋"
                android:textColor="#00FFBF"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtMultimediaContent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:typeface="monospace"
            android:textSize="14sp"
            android:padding="12dp"/>

        <!-- ======================== -->
        <!-- 9. SENSORS -->
        <!-- ======================== -->
        <LinearLayout
            android:id="@+id/headerSensors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gel_btn_outline_selector"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:clickable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sensors"
                android:textColor="#00FFBF"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/iconSensorsToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＋"
                android:textColor="#00FFBF"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtSensorsContent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:typeface="monospace"
            android:textSize="14sp"
            android:padding="12dp"/>

        <!-- ======================== -->
        <!-- 10. BIOMETRICS -->
        <!-- ======================== -->
        <LinearLayout
            android:id="@+id/headerBiometrics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gel_btn_outline_selector"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:clickable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Biometrics Hardware"
                android:textColor="#00FFBF"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/iconBiometricsToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＋"
                android:textColor="#00FFBF"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtBiometricsContent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:typeface="monospace"
            android:textSize="14sp"
            android:padding="12dp"/>

        <!-- ======================== -->
        <!-- 11. OTHER PERIPHERALS -->
        <!-- ======================== -->
        <LinearLayout
            android:id="@+id/headerOtherPeripherals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/gel_btn_outline_selector"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:clickable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Other Peripherals"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/gel_text_primary"/>

            <TextView
                android:id="@+id/iconOtherPeripheralsToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＋"
                android:textSize="18sp"
                android:textColor="@color/gel_gold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtOtherPeripheralsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            android:textSize="14sp"
            android:padding="12dp"/>
    </LinearLayout>
</ScrollView>
