        <!-- TEMPLATE FOR ALL SECTIONS -->
        <!-- HEADER + CONTENT (gone) -->

        <!-- 1 CAMERA -->
        <include layout="@layout/gel_section_camera" />

        <!-- 2 BIOMETRICS -->
        <include layout="@layout/gel_section_biometrics" />

        <!-- 3 SENSORS -->
        <include layout="@layout/gel_section_sensors" />

        <!-- 4 CONNECTIVITY -->
        <include layout="@layout/gel_section_connectivity" />

        <!-- 5 LOCATION -->
        <include layout="@layout/gel_section_location" />

        <!-- 6 OTHER PERIPHERALS -->
        <include layout="@layout/gel_section_other" />

        <!-- 7 BLUETOOTH -->
        <include layout="@layout/gel_section_bluetooth" />

        <!-- 8 NFC -->
