        <!-- 12 HAPTICS -->
        <include layout="@layout/gel_section_haptics" />

        <!-- 13 GNSS CONSTELLATIONS -->
        <include layout="@layout/gel_section_gnss" />

        <!-- 14 USB SPEED -->
        <include layout="@layout/gel_section_usb" />

        <!-- 15 MICROPHONES -->
