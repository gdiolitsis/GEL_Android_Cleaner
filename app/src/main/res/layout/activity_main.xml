<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/gel_bg">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- LOGO -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/app_name"
            android:padding="8dp"/>

        <!-- TITLE -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_ready"
            android:textColor="@color/gel_text_primary"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"/>

        <!-- LANGUAGE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnLangGR"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="GR"
                android:background="@drawable/gel_btn_outline_selector"
                android:textColor="@color/gel_btn_text"/>

            <Button
                android:id="@+id/btnLangEN"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="EN"
                android:background="@drawable/gel_btn_outline_selector"
                android:textColor="@color/gel_btn_text"/>
        </LinearLayout>

        <!-- SECTIONS -->
        <include layout="@layout/section_system"/>
        <include layout="@layout/section_cleaner"/>
        <include layout="@layout/section_junk"/>
        <include layout="@layout/section_performance"/>

        <!-- CLEAN ALL -->
        <Button
            android:id="@+id/btnCleanAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clean_all"
            android:background="@drawable/gel_btn_danger"
            android:textColor="@color/gel_btn_text"
            android:layout_marginTop="16dp"/>

        <!-- DONATE -->
        <Button
            android:id="@+id/btnDonate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/donate"
            android:background="@drawable/gel_btn_outline_selector"
            android:textColor="@color/gel_btn_text"
            android:layout_marginTop="20dp"/>

        <!-- LOG OUTPUT -->
        <TextView
            android:id="@+id/txtLogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gel_text_secondary"
            android:textSize="13sp"
            android:padding="12dp"
            android:layout_marginTop="20dp"
            android:background="@color/gel_bg"/>

    </LinearLayout>
</ScrollView>
