<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/gel_bg">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">


        <!-- âœ… âœ… âœ… TOP HEADER (ROW) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="3"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <!-- LOGO LEFT -->
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.6"
                android:src="@drawable/gel_logo"
                android:gravity="start"
                android:padding="4dp"
                android:contentDescription="@string/app_name" />

            <!-- TITLE CENTER -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:gravity="center"
                android:text="GEL Android Cleaner"
                android:textColor="@color/gel_text_primary"
                android:textStyle="bold"
                android:textSize="22sp"
                android:singleLine="true" />

            <!-- LANG BUTTONS RIGHT -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/btnLangGR"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:text="ðŸ‡¬ðŸ‡·"
                    android:background="@drawable/gel_btn_outline_selector"
                    android:textColor="@color/gel_btn_text_white"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/btnLangEN"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:text="ðŸ‡¬ðŸ‡§"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/gel_btn_outline_selector"
                    android:textColor="@color/gel_btn_text_white"
                    android:singleLine="true" />
            </LinearLayout>

        </LinearLayout>


        <!-- âœ… Device subtitle -->
        <TextView
            android:id="@+id/txtSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device is ready â€¢ Dark-Gold Edition v4.3"
            android:textColor="@color/gel_text_secondary"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>


        <!-- âœ… DONATE -->
        <Button
            android:id="@+id/btnDonate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â¤ï¸ DONATE! KEEP THIS APP FREE"
            android:background="@drawable/gel_btn_danger"
            android:textColor="@color/gel_btn_text_white"
            android:layout_marginTop="12dp"
            android:singleLine="true"/>


        <!-- âœ… SECTION â€” SYSTEM -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/gel_text_primary"
            android:layout_marginTop="18dp"
            android:paddingLeft="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCpuRamInfo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:text="ðŸ”¥ CPU INFO"
                android:background="@drawable/gel_btn_outline_selector"
                android:textColor="@color/gel_btn_text_white"
                android:layout_margin="4dp"
                android:singleLine="true"/>

            <Button
                android:id="@+id/btnCpuRamLive"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:text="ðŸ“ˆ CPU LIVE"
                android:background="@drawable/gel_btn_outline_selector"
                android:textColor="@color/gel_btn_text_white"
                android:layout_margin="4dp"
                android:singleLine="true"/>
        </LinearLayout>


        <!-- âœ… CLEANER -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cleaner"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/gel_text_primary"
            android:layout_marginTop="18dp"
            android:paddingLeft="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCleanRam"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:text="âš¡ CLEAN RAM"
                android:background="@drawable/gel_btn_outline_selector"
                android:textColor="@color/gel_btn_text_white"
                android:layout_margin="4dp"
                android:singleLine="true"/>

            <Button
                android:id="@+id/btnSafeClean"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:text="ðŸ§¹ SAFE CLEAN"
                android:background="@drawable/gel_btn_outline_selector"
                android:textColor="@color/gel_btn_text_white"
                android:layout_margin="4dp"
                android:singleLine="true"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnDeepClean"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ðŸ’£ DEEP CLEAN"
            android:background="@drawable/gel_btn_danger"
            android:textColor="@color/gel_btn_text_white"
            android:layout_margin="4dp"
            android:singleLine="true"/>


        <!-- âœ… JUNK -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Junk"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/gel_text_primary"
            android:layout_marginTop="18dp"
            android:paddingLeft="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMediaJunk"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:text="ðŸ–¼ MEDIA JUNK"
                android:background="@drawable/gel_btn_outline_selector"
                android:textColor="@color/gel_btn_text_white"
                android:layout_margin="4dp"
                android:singleLine="true"/>

            <Button
                android:id="@+id/btnBrowserCache"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:text="ðŸŒ BROWSER CACHE"
                android:background="@drawable/gel_btn_outline_selector"
                android:textColor="@color/gel_btn_text_white"
                android:layout_margin="4dp"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnTemp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:text="ðŸ”¥ TEMP"
                android:background="@drawable/gel_btn_outline_selector"
                android:textColor="@color/gel_btn_text_white"
