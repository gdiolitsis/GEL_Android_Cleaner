<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/gel_bg">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- LOGO -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/app_name"
            android:padding="8dp"/>

        <!-- READY LABEL -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_ready"
            android:textColor="@color/gel_text_primary"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"/>

        <!-- ===== LANGUAGE ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnLangGR"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="GR"
                android:background="@drawable/gel_btn_outline_selector"
                android:textColor="@color/gel_btn_text"/>

            <Button
                android:id="@+id/btnLangEN"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="EN"
                android:background="@drawable/gel_btn_outline_selector"
                android:textColor="@color/gel_btn_text"/>
        </LinearLayout>


        <!-- ===== SYSTEM ===== -->
        <Button
            android:id="@+id/btnCpuRamInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cpu_ram_info"
            android:background="@drawable/gel_btn_outline_selector"
            android:textColor="@color/gel_btn_text"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnCpuRamLive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cpu_ram_live"
            android:background="@drawable/gel_btn_outline_selector"
            android:textColor="@color/gel_btn_text"/>


        <!-- ===== CLEANER ===== -->
        <Button
            android:id="@+id/btnCleanRam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clean_ram"
            android:background="@drawable/gel_btn_outline_selector"
            android:textColor="@color/gel_btn_text"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnSafeClean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/safe_clean"
            android:background="@drawable/gel_btn_outline_selector"
            android:textColor="@color/gel_btn_text"/>

        <Button
            android:id="@+id/btnDeepClean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deep_clean"
            android:background="@drawable/gel_btn_outline_selector"
            android:textColor="@color/gel_btn_text"/>


        <!-- ===== JUNK ===== -->
        <Button
            android:id="@+id/btnMediaJunk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/media_junk"
            android:background="@drawable/gel_btn_outline_selector"
            android:textColor="@color/gel_btn_text"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnBrowserCache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/browser_cache"
            android:background="@drawable/gel_btn_outline_selector"
            android:textColor="@color/gel_btn_text"/>

        <Button
            android:id="@+id/btnTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/temp_clean"
            android:background="@drawable/gel_btn_outline_selector"
            android:textColor="@color/gel_btn_text"/>

        <Button
            android:id="@+id/btnAppCache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_cache"
            android:background="@drawable/gel_btn_outline_selector"
            android:textColor="@color/gel_btn_text"/>


        <!-- ===== PERFORMANCE ===== -->
        <Button
            android:id="@+id/btnBatteryBoost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/battery_boost"
            android:background="@drawable/gel_btn_outline_selector"
            android:textColor="@color/gel_btn_text"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnKillApps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kill_apps"
            android:background="@drawable/gel_btn_outline_selector"
            android:textColor="@color/gel_btn_text"/>


        <!-- ===== CLEAN ALL ===== -->
        <Button
            android:id="@+id/btnCleanAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clean_all"
            android:background="@drawable/gel_btn_red"
            android:textColor="@color/gel_btn_text"
            android:layout_marginTop="16dp"/>


        <!-- ===== DONATE ===== -->
        <Button
            android:id="@+id/btnDonate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/donate"
            android:background="@drawable/gel_btn_outline_selector"
            android:textColor="@color/gel_btn_text"
            android:layout_marginTop="20dp"/>


        <!-- LOG VIEW -->
        <TextView
            android:id="@+id/txtLogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gel_text_secondary"
            android:textSize="13sp"
            android:padding="12dp"
            android:layout_marginTop="20dp"
            android:background="@color/gel_bg"/>

    </LinearLayout>
</ScrollView>
