<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gel_dark_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- LOGO -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_gravity="center"
            android:padding="8dp" />

        <!-- TITLE -->
        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/gel_gold"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:padding="8dp" />

        <!-- CLEAN BUTTONS GROUP -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp">

            <Button
                android:id="@+id/btn_ram_clean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/clean_ram"
                android:textAllCaps="false"
                android:background="@color/gel_btn"
                android:textColor="@color/gel_dark_bg"
                android:layout_marginVertical="6dp" />

            <Button
                android:id="@+id/btn_cache_clean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/clean_cache"
                android:textAllCaps="false"
                android:background="@color/gel_btn"
                android:textColor="@color/gel_dark_bg"
                android:layout_marginVertical="6dp" />

            <Button
                android:id="@+id/btn_deep_clean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deep_clean"
                android:textAllCaps="false"
                android:background="@color/gel_btn"
                android:textColor="@color/gel_dark_bg"
                android:layout_marginVertical="6dp" />
        </LinearLayout>

        <!-- SEPARATOR -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gel_gold_dim"
            android:layout_marginVertical="12dp"/>

        <!-- UTILITIES -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_boost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/speed_boost"
                android:background="@color/gel_btn"
                android:textColor="@color/gel_dark_bg"
                android:layout_marginVertical="6dp" />

            <Button
                android:id="@+id/btn_logs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logs"
                android:background="@color/gel_btn"
                android:textColor="@color/gel_dark_bg"
                android:layout_marginVertical="6dp" />

            <Button
                android:id="@+id/btn_donate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/donate"
                android:background="@color/gel_btn"
                android:textColor="@color/gel_dark_bg"
                android:layout_marginVertical="6dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
