<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/gel_logo"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/appTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GEL Android Cleaner"
                android:textColor="@color/gold"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnLangGR"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/flag_gr"
                    android:layout_margin="4dp"/>

                <ImageView
                    android:id="@+id/btnLangEN"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/flag_en"
                    android:layout_margin="4dp"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device is ready â€¢ Dark-Gold Edition v4.3"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp" />

        <!-- Donate -->
        <Button
            android:id="@+id/btnDonate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="â¤ï¸ DONATE! KEEP THIS APP FREE"
            android:background="@drawable/gel_btn_danger"/>


        <!-- ====== SYSTEM ====== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCpuInfo"
                style="@style/GEL.Button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="ðŸ”¥ CPU INFO"/>

            <Button
                android:id="@+id/btnCpuLive"
                style="@style/GEL.Button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="ðŸ“ˆ CPU LIVE"/>
        </LinearLayout>


        <!-- ====== CLEANER ====== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cleaner"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCleanRam"
                style="@style/GEL.Button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="âš¡ CLEAN RAM"/>

            <Button
                android:id="@+id/btnSafeClean"
                style="@style/GEL.Button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="ðŸ§¹ SAFE CLEAN"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnDeepClean"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ðŸ’£ DEEP CLEAN"
            android:background="@drawable/gel_btn_danger"/>


        <!-- ====== JUNK ====== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Junk"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMediaJunk"
                style="@style/GEL.Button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="ðŸ–¼ï¸ MEDIA JUNK"/>

            <Button
                android:id="@+id/btnBrowserCache"
                style="@style/GEL.Button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="ðŸŒ BROWSER CACHE"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnTemp"
            style="@style/GEL.Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ðŸ”¥ TEMP"/>


        <!-- ====== PERFORMANCE ====== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Performance"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBatteryBoost"
                style="@style/GEL.Button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="ðŸ”‹ BATTERY BOOST"/>

            <Button
                android:id="@+id/btnKillApps"
                style="@style/GEL.Button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="ðŸš€ KILL APPS"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnCleanAll"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ðŸ’£ CLEAN ALL"
            android:background="@drawable/gel_btn_danger"/>


        <!-- ====== LOGS ====== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logs"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/txtLogs"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/dark_gray"
            android:gravity="top|left"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="14sp"/>
    </LinearLayout>
</ScrollView>
