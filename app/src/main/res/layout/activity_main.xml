<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@color/gel_bg"
    android:gravity="center_horizontal">

    <!-- HEADER ROW -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/gel_logo"
            android:contentDescription="@string/app_name"
            android:layout_marginRight="4dp" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/gel_text_primary"
            android:textStyle="bold"
            android:textSize="22sp"
            android:singleLine="true" />

        <!-- LANG FLAGS -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="end">

            <TextView
                android:id="@+id/btnLangGR"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="ðŸ‡¬ðŸ‡·"
                android:textSize="24sp"
                android:textColor="@color/gel_text_primary"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/btnLangEN"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="ðŸ‡¬ðŸ‡§"
                android:textSize="24sp"
                android:textColor="@color/gel_text_primary" />
        </LinearLayout>
    </LinearLayout>

    <!-- SUBTITLE -->
    <TextView
        android:id="@+id/txtSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/device_ready"
        android:textColor="@color/gel_text_secondary"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

    <!-- DONATE -->
    <Button
        android:id="@+id/btnDonate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/donate"
        android:background="@drawable/gel_btn_danger"
        android:textColor="@color/gel_btn_text_white"
        android:layout_marginTop="12dp"
        android:singleLine="true"/>


    <!-- SYSTEM -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/system"
        android:textColor="@color/gel_text_primary"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingLeft="6dp"
        android:layout_marginTop="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCpuRamInfo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:text="@string/cpu_ram_info"
            android:background="@drawable/gel_btn_outline_selector"
            android:textColor="@color/gel_btn_text_white"
            android:layout_margin="4dp"
            android:singleLine="true"/>

        <Button
            android:id="@+id/btnCpuRamLive"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:text="@string/cpu_ram_live"
            android:background="@drawable/gel_btn_outline_selector"
            android:textColor="@color/gel_btn_text_white"
            android:layout_margin="4dp"
            android:singleLine="true"/>
    </LinearLayout>


    <!-- CLEANER -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cleaner"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/gel_text_primary"
        android:layout_marginTop="18dp"
        android:paddingLeft="6dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCleanRam"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:text="@string/clean_ram"
            android:background="@drawable/gel_btn_outline_selector"
            android:textColor="@color/gel_btn_text_white"
            android:layout_margin="4dp"
            android:singleLine="true"/>

        <Button
            android:id="@+id/btnSafeClean"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:text="@string/safe_clean"
            android:background="@drawable/gel_btn_outline_selector"
            android:textColor="@color/gel_btn_text_white"
            android:layout_margin="4dp"
            android:singleLine="true"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnDeepClean"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/deep_clean"
        android:background="@drawable/gel_btn_danger"
        android:textColor="@color/gel_btn_text_white"
        android:layout_margin="4dp"
        android:singleLine="true"/>


    <!-- JUNK -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/junk"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/gel_text_primary"
        android:layout_marginTop="18dp"
        android:paddingLeft="6dp"/>

    <Button
        android:id="@+id/btnMediaJunk"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/media_junk"
        android:background="@drawable/gel_btn_outline_selector"
        android:textColor="@color/gel_btn_text_white"
        android:layout_margin="4dp"
        android:singleLine="true"/>

    <Button
        android:id="@+id/btnBrowserCache"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/browser_cache"
        android:background="@drawable/gel_btn_outline_selector"
        android:textColor="@color/gel_btn_text_white"
        android:layout_margin="4dp"
        android:singleLine="true"/>

    <Button
        android:id="@+id/btnTemp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/temp_clean"
        android:background="@drawable/gel_btn_outline_selector"
        android:textColor="@color/gel_btn_text_white"
        android:layout_margin="4dp"
        android:singleLine="true"/>

    <Button
        android:id="@+id/btnAppCache"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/app_cache"
        android:background="@drawable/gel_btn_outline_selector"
        android:textColor="@color/gel_btn_text_white"
        android:layout_margin="4dp"
        android:singleLine="true"/>


    <!-- PERFORMANCE -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/performance"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/gel_text_primary"
        android:layout_marginTop="18dp"
        android:paddingLeft="6dp"/>

    <Button
        android:id="@+id/btnBatteryBoost"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/battery_boost"
        android:background="@drawable/gel_btn_outline_selector"
        android:textColor="@color/gel_btn_text_white"
        android:layout_margin="4dp"
        android:singleLine="true"/>

    <Button
        android:id="@+id/btnKillApps"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/kill_apps"
        android:background="@drawable/gel_btn_outline_selector"
        android:textColor="@color/gel_btn_text_white"
        android:layout_margin="4dp"
        android:singleLine="true"/>


    <!-- ALL -->
    <Button
        android:id="@+id/btnCleanAll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/clean_all"
        android:background="@drawable/gel_btn_danger"
        android:textColor="@color/gel_btn_text_white"
        android:layout_margin="4dp"
        android:singleLine="true"/>


    <!-- LOGS -->
    <ScrollView
        android:id="@+id/scrollRoot"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gel_bg">

        <TextView
            android:id="@+id/txtLogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gel_text_secondary"
            android:textSize="13sp"
            android:padding="12dp"/>
    </ScrollView>

</LinearLayout>
