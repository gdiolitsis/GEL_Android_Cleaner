<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gel_bg"
    android:padding="6dp">

    <!-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
         HEADER
    â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
    <LinearLayout
        android:id="@+id/headerTop"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <Button
            android:id="@+id/btnLangGR"
            style="@style/GEL.Button"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="ðŸ‡¬ðŸ‡·"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btnLangEN"
            style="@style/GEL.Button"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="ðŸ‡¬ðŸ‡§"
            android:textSize="18sp"/>
    </LinearLayout>

    <!-- LOGO + TITLE -->
    <LinearLayout
        android:id="@+id/titleBlock"
        android:layout_below="@id/headerTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/logoView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/logo_gel"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/gelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GEL Android Cleaner"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/gelSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_ready"
            android:textColor="@color/gel_text_secondary"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- DONATE BTN -->
    <Button
        android:id="@+id/btnDonate"
        android:layout_below="@id/titleBlock"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/donate"
        android:background="@drawable/gel_btn_danger"
        android:layout_marginTop="8dp"/>


    <!-- MAIN CONTENT SCROLLER -->
    <ScrollView
        android:id="@+id/pageScroll"
        android:layout_below="@id/btnDonate"
        android:layout_above="@+id/txtLogs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SYSTEM -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/system"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCpuRamInfo"
                    style="@style/GEL.Button"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/cpu_ram_info"/>

                <Button
                    android:id="@+id/btnCpuRamLive"
                    style="@style/GEL.Button"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/cpu_ram_live"/>
            </LinearLayout>


            <!-- CLEANER -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cleaner"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCleanRam"
                    style="@style/GEL.Button"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/clean_ram"/>

                <Button
                    android:id="@+id/btnSafeClean"
                    style="@style/GEL.Button"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/safe_clean"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnDeepClean"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/deep_clean"
                android:background="@drawable/gel_btn_danger"/>


            <!-- JUNK -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/junk"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMediaJunk"
                    style="@style/GEL.Button"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/media_junk"/>

                <Button
                    android:id="@+id/btnBrowserCache"
                    style="@style/GEL.Button"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/browser_cache"/>
            </LinearLayout>

            <!-- TEMP + APP CACHE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnTemp"
                    style="@style/GEL.Button"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/temp_clean"/>

                <Button
                    android:id="@+id/btnAppCache"
                    style="@style/GEL.Button"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/app_cache"/>
            </LinearLayout>


            <!-- PERFORMANCE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/performance"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBatteryBoost"
                    style="@style/GEL.Button"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/battery_boost"/>

                <Button
                    android:id="@+id/btnKillApps"
                    style="@style/GEL.Button"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="@string/kill_apps"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnCleanAll"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/clean_all"
                android:background="@drawable/gel_btn_danger"/>

        </LinearLayout>
    </ScrollView>


    <!-- LOGS ONLY SCROLL -->
    <ScrollView
        android:id="@+id/scrollRoot"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/dark_gray"
        android:padding="6dp">

        <TextView
            android:id="@+id/txtLogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="" />
    </ScrollView>

</RelativeLayout>
