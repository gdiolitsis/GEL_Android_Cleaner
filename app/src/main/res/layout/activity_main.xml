            android:text="Junk"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/gel_text_primary"
            android:layout_marginTop="18dp"
            android:paddingLeft="6dp"/>

        <!-- (rest of your layout UNCHANGED...) -->

