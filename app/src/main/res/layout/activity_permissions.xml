<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#101010">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/txtPermTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Required Permissions"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/txtPermStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#cccccc"
            android:textSize="16sp"
            android:paddingBottom="24dp" />

        <!-- Usage Access -->
        <Button
            android:id="@+id/btnUsageAccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grant Usage Access" />

        <View
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <!-- Accessibility -->
        <Button
            android:id="@+id/btnAccessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grant Accessibility" />

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- Done -->
        <Button
            android:id="@+id/btnPermDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:background="#2E7D32"
            android:textColor="#ffffff" />

    </LinearLayout>
</ScrollView>
