<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ========================================================= -->
    <!-- GEL DARK-GOLD — LANDSCAPE EDITION v5.0                    -->
    <!-- Μικρά adjustments για landscape                          -->
    <!-- ========================================================= -->

    <style name="Theme.GEL.DarkGold" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Λίγο πιο χαμηλό padding γιατί το landscape έχει χαμηλό ύψος -->
        <item name="android:windowBackground">@color/gel_bg</item>

        <!-- Μικρή αύξηση σε τίτλους επειδή landscape = more width -->
        <item name="android:textColorPrimary">@color/gel_text_primary</item>
        <item name="android:textColorSecondary">@color/gel_text_secondary</item>

        <!-- Buttons λίγο χαμηλότερα -->
        <item name="android:buttonStyle">@style/GEL.Landscape.Button</item>
    </style>

    <!-- Custom button style για landscape -->
    <style name="GEL.Landscape.Button" parent="@android:style/Widget.Button">
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
