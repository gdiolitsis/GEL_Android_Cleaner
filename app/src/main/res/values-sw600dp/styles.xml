<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ========================================================= -->
    <!-- GEL DARK-GOLD â€” TABLET / INNER-SCREEN EDITION v5.0        -->
    <!-- ========================================================= -->

    <style name="Theme.GEL.DarkGold" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Background stays same -->
        <item name="android:windowBackground">@color/gel_bg</item>

        <!-- Bigger text for tablet -->
        <item name="android:textColorPrimary">@color/gel_text_primary</item>
        <item name="android:textColorSecondary">@color/gel_text_secondary</item>

        <!-- Titles scale up -->
        <item name="android:textAppearanceLarge">@style/GEL.Tablet.Title</item>

        <!-- Bigger buttons -->
        <item name="android:buttonStyle">@style/GEL.Tablet.Button</item>

        <!-- Optional: bigger list items (works for your adapters) -->
        <item name="android:listPreferredItemHeight">64dp</item>
    </style>

    <!-- ========================================================= -->
    <!-- CUSTOM TABLET TITLE                                       -->
    <!-- ========================================================= -->
    <style name="GEL.Tablet.Title" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ========================================================= -->
    <!-- CUSTOM TABLET BUTTON                                      -->
    <!-- ========================================================= -->
    <style name="GEL.Tablet.Button" parent="@android:style/Widget.Button">
        <item name="android:minHeight">52dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

</resources>
