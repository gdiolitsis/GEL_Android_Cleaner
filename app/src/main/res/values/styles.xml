<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ========================================================= -->
    <!-- GEL DARK-GOLD EDITION v5.0                               -->
    <!-- Custom theme for GEL Cleaner / Foldable UI Ready         -->
    <!-- ========================================================= -->

    <style name="Theme.GEL.DarkGold" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Background -->
        <item name="android:windowBackground">@color/gel_bg</item>

        <!-- Status & Navigation Bar -->
        <item name="android:statusBarColor">@color/gel_bg_dark</item>
        <item name="android:navigationBarColor">@color/gel_bg_dark</item>

        <!-- Icons = LIGHT -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/gel_text_primary</item>
        <item name="android:textColorSecondary">@color/gel_text_secondary</item>

        <!-- Buttons / interactive elements -->
        <item name="colorControlNormal">@color/gel_gold</item>
        <item name="colorControlActivated">@color/gel_gold</item>
        <item name="colorAccent">@color/gel_gold</item>

        <!-- Remove Android default blue highlights -->
        <item name="android:colorAccent">@color/gel_gold</item>
        <item name="android:colorControlHighlight">@color/gel_gold_faint</item>

        <!-- Disable default ripple for consistency -->
        <item name="android:colorControlActivated">@color/gel_gold</item>

        <!-- Prevent default window inset padding -->
        <item name="android:fitsSystemWindows">false</item>

        <!-- Buttons elevation -->
        <item name="android:stateListAnimator">@null</item>

    </style>


    <!-- ========================================================= -->
    <!-- GEL POPUP DIALOG THEME (Black background + Gold border)  -->
    <!-- ========================================================= -->
    <style name="GELDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Black background -->
        <item name="android:windowBackground">@android:color/black</item>

        <!-- Ensure title & message appear white -->
        <item name="android:textColor">#FFFFFF</item>

        <!-- Buttons gold -->
        <item name="android:buttonTint">@color/gel_gold</item>
    </style>

</resources>
