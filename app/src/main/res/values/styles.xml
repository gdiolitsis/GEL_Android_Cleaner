<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.GEL" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/gel_black</item>
        <item name="android:navigationBarColor">@color/gel_black</item>
        <item name="android:windowBackground">@color/gel_black</item>
        <item name="colorPrimary">@color/gel_gold</item>
        <item name="colorPrimaryVariant">@color/gel_gold_dark</item>
        <item name="colorOnPrimary">@color/gel_black</item>
        <item name="android:textColor">@color/gel_text_primary</item>
    </style>

    <style name="GEL.SectionTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/gel_text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GEL.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@color/gel_button_bg</item>
        <item name="android:textColor">@color/gel_text_primary</item>
        <item name="strokeColor">@color/gel_button_stroke</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">14dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
    </style>

    <style name="GEL.Button.Danger">
        <item name="android:background">@color/gel_red</item>
        <item name="android:textColor">@color/gel_text_primary</item>
        <item name="cornerRadius">18dp</item>
    </style>

    <style name="GEL.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/gel_black_2</item>
        <item name="cardCornerRadius">18dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
</resources>
