<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.GEL" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/gel_bg</item>
        <item name="android:textColor">@color/gel_text_primary</item>
        <item name="colorPrimary">@color/gel_primary</item>
        <item name="colorPrimaryDark">@color/gel_primary_dark</item>
        <item name="colorAccent">@color/gel_primary</item>
    </style>

    <style name="GEL.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/gel_btn_outline</item>
        <item name="android:textColor">@color/gel_btn_text</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
