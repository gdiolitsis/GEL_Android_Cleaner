<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- =======================================
          ✅ MAIN BASE THEME (requested)
    ======================================== -->
    <style name="Theme.GEL.DarkGold" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowBackground">@color/gel_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- =======================================
          ✅ ADDED FOR MANIFEST COMPATIBILITY
          (Fix: Theme.App not found)
    ======================================== -->
    <style name="Theme.App" parent="Theme.GEL.DarkGold"/>
    

    <!-- ============================
          BUTTON BASE
    ============================= -->
    <style name="GEL.Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_margin">6dp</item>
        <item name="android:textColor">@color/gel_btn_text</item>
        <item name="android:background">@drawable/gel_btn_outline_selector</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- ============================
          DANGER BUTTON
    ============================= -->
    <style name="GEL.ButtonDanger" parent="Widget.AppCompat.Button">
        <item name="android:layout_margin">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/gel_btn_danger</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
