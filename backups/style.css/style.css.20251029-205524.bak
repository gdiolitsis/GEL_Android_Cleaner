body {
  font-family: "Poppins", sans-serif;
  background-color: #000;
  color: #fff;
  text-align: center;
  margin: 0;
  padding: 0;
  overflow-x: hidden;
  opacity: 1;
  transition: opacity 1s ease-in-out;
}

/* ‚ö° Title */
h1 {
  color: gold;
  text-shadow: 0 0 12px #d4af37;
  margin-top: 20px;
  letter-spacing: 1px;
}

.edition {
  color: #d4af37;
  font-weight: bold;
  margin-bottom: 25px;
  text-shadow: 0 0 8px #d4af37;
}

/* üè≥Ô∏è Language Flags */
.flags {
  position: absolute;
  top: 10px;
  right: 15px;
  display: flex;
  gap: 8px;
  z-index: 100;
}
.flags img {
  width: 34px;
  height: 24px;
  border-radius: 3px;
  cursor: pointer;
  transition: all 0.3s ease-in-out;
  filter: drop-shadow(0 0 6px #d4af37);
}
.flags img:hover {
  transform: scale(1.15);
  filter: drop-shadow(0 0 12px #ffeb80);
}

/* ‚öôÔ∏è Logo */
.logo {
  width: 150px;
  margin-top: 45px;
  border-radius: 50%;
  box-shadow: 0 0 25px #d4af37;
  animation: logoGlow 3s ease-in-out infinite alternate;
}
@keyframes logoGlow {
  from { box-shadow: 0 0 25px #d4af37, 0 0 45px #d4af37; }
  to { box-shadow: 0 0 60px #ffec80, 0 0 90px #ffec80; }
}

/* üîò Buttons */
button {
  background: rgba(0, 0, 0, 0.5);
  border: 2px solid #d4af37;
  color: white;
  border-radius: 15px;
  font-size: 18px;
  margin: 8px;
  padding: 12px 25px;
  width: 75%;
  transition: all 0.3s ease-in-out;
  box-shadow: inset 0 0 8px #d4af37;
}
button:hover {
  background-color: #d4af37;
  color: black;
  box-shadow: 0 0 20px #ffeb80;
  transform: translateY(-2px);
}

/* üí∞ PayPal Button */
.paypal {
  background: black;
  color: white;
  border: 2px solid #d4af37;
  font-weight: bold;
  width: 80%;
  font-size: 19px;
  margin-top: 30px;
  border-radius: 25px;
  box-shadow: 0 0 25px #d4af37, inset 0 0 25px #d4af37;
  animation: pulse 2.5s infinite;
  transition: all 0.4s ease-in-out;
}
.paypal span {
  color: #ffcc00;
  font-size: 22px;
}
@keyframes pulse {
  0% { box-shadow: 0 0 15px #d4af37, inset 0 0 20px #d4af37; }
  50% { box-shadow: 0 0 40px #ffeb80, inset 0 0 40px #ffeb80; }
  100% { box-shadow: 0 0 15px #d4af37, inset 0 0 20px #d4af37; }
}

/* ü¶∂ Footer */
footer {
  color: gray;
  margin-top: 40px;
  font-size: 14px;
  letter-spacing: 0.5px;
  text-shadow: 0 0 4px #333;
  padding-bottom: 10px;
}

/* ‚úÖ Safe Fade Loader */
body.loaded {
  opacity: 1;
}
